<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeBuch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grayLight</item>
        <item name="colorPrimaryVariant">@color/grayNormal</item>
        <item name="colorOnPrimary">@color/grayHard</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grayNormal</item>
        <item name="colorSecondaryVariant">@color/grayHard</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainButtons" parent="WrapContent_WrapContent">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/normalMargin</item>
    </style>

    <style name="WrapContent_WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>