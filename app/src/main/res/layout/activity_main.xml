<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            style="@style/MainButtons"
            android:id="@+id/incomingMoney_button"
            android:text="@string/incomingMoney_text" />

        <Button
            style="@style/MainButtons"
            android:id="@+id/costMoney_button"
            android:text="@string/costMoney_text" />

        <Button
            style="@style/MainButtons"
            android:id="@+id/allMovingMoney_button"
            android:text="@string/allMoney_text" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/addNewMovingMoney_button"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints" />

    <Button
        android:text="@string/addNewMovingMoney_text"
        android:id="@+id/addNewMovingMoney_button"
        style="@style/MainButtons"
        android:layout_width="match_parent"

        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>